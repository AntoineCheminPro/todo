{% extends 'template.html.twig' %}


{% block title %}Project index{% endblock %}

{% block main %}
    <h1>Projets en cours</h1>

    <section class="container row text-center">
        {% for project in projects %}
        	<article class="table txt maincolor container p-4 m-4 col-lg-5 col-sm-10 align-items-center justify-content-center">
			{# <div class="card" style="width: 18rem;"> #}
				<h4 class="card-header m-2 bg-white">
					N° {{ project.id }} : {{ project.label }}
				</h4>
				<ul class="list-group list-group-flush align-items-center">
					<li class="list-group-item my-2"> Ouvert le {{ project.openingDate ? project.openingDate|date('d-m-Y') : '' }} fin prévue pour {{ project.deadline ? project.deadline|date('d-m-Y') : '' }}</li>
					<li class="list-group-item my-2">{{ project.description }}</li>
				</ul>
			{# </div> #}
			<div class="container row justify-content-around my-2">
				<a class="btn bodycolor txtheader p-2 m-1" href="{{ path('project_show', {'id': project.id}) }}">Montrer</a>
				<a class="btn bodycolor txtheader p-2 m-1" href="{{ path('project_edit', {'id': project.id}) }}">editer</a>
			</div>
	</article>
