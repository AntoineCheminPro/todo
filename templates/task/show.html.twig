{% extends 'template.html.twig' %}


{% block title %}Task{% endblock %}

{% block main %}
    <h1>Task</h1>
    <section class="container row text-center">
        	<article class="table txt maincolor container p-4 m-4 col-lg-5 col-sm-10 align-items-center justify-content-center">
				<h4 class="card-header m-2 bg-white"> N°{{ task.id }} {{ task.label }}</h4>
				<ul class="list-group list-group-flush align-items-center">
					<li class="list-group-item my-2">du {{ task.registered ? task.registered|date('d-m-Y') : '' }} fin prévue le : {{ task.deadline ? task.deadline|date('d-m-Y') : '' }}</li>
					<li class="list-group-item my-2">{{ task.content }}</li>
					<li class="list-group-item my-2">{{ task.active ? 'Actif' : 'Archivé' }}</li>
				</ul>
			<div class="container row justify-content-around my-2">
				<a class="btn bodycolor txtheader p-2 m-1" href="{{ path('task_index') }}">Retour</a>
				<a class="btn bodycolor txtheader p-2 m-1" href="{{ path('task_edit', {'id': task.id}) }}">editer</a>
                    {{ include('task/_delete_form.html.twig') }}
			</div>
	</article>
{% endblock %}
