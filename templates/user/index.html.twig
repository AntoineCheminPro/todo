{% extends 'template.html.twig' %}


{% block title %}User index{% endblock %}

{% block main %}

	<h1 >Index des utilisateurs</h1> {# class="txtheader text-center" #}
    <section class="container row text-center">
		{% for user in users %}
        	<article class="table txt maincolor container p-4 m-4 col-lg-5 col-sm-10 align-items-center justify-content-center">
			{# <div class="card" style="width: 18rem;"> #}
				<h4 class="card-header m-2 bg-white">
					{{ user.firstname }}
					{{ user.lastname }}
				</h4>
				<ul class="list-group list-group-flush align-items-center">
					<li class="list-group-item my-2">{{ user.email }}   {{ user.phone }}</li>
					<li class="list-group-item my-2">{{ user.adress }}</li>
					<li class="list-group-item my-2">{{ user.cityCode }} {{ user.city }}</li>
				</ul>
			{# </div> #}
			<div class="container row justify-content-around my-2">
				<a class="btn bodycolor txtheader p-2 m-1" href="{{ path('user_show', {'id': user.id}) }}">Montrer</a>
				<a class="btn bodycolor txtheader p-2 m-1" href="{{ path('user_edit', {'id': user.id}) }}">editer</a>
			</div>
	</article>
    {% endfor %}
</section>
	{% endblock %}
